pipeline {
    agent any

    stages {
        stage('Build') {
            agent { docker { image 'python:3.11' } }
            steps {
                echo 'ðŸ”¨ Compiling Python source files...'
                sh 'python3 -m py_compile sources/add2vals.py sources/calc.py'
            }
        }

        stage('Test') {
            agent { docker { image 'python:3.11' } }
            steps {
                echo 'ðŸ§ª Setting up virtual environment and running tests...'
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install pytest
                    mkdir -p test-reports
                    pytest --verbose --junit-xml=test-reports/results.xml sources/test_calc.py
                '''
            }
            post {
                always {
                    echo 'ðŸ“„ Publishing test results...'
                    junit 'test-reports/results.xml'
                }
            }
        }

        stage('Deliver') {
            agent { docker { image 'python:3.11' } }
            steps {
                echo 'ðŸš€ Packaging application with PyInstaller...'
                sh '''
                    pip install pyinstaller
                    pyinstaller --onefile sources/add2vals.py
                '''
            }
            post {
                success {
                    echo 'ðŸ“¦ Archiving built artifacts...'
                    archiveArtifacts artifacts: 'dist/add2vals', fingerprint: true
                }
            }
        }
    }
}
